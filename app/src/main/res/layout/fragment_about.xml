<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AboutFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="APLIKASI CASE BASED REASONING (CBR) DALAM MENENTUKAN KERUSAKAN PADA LAPTOP ATAU KOMPUTER DENGAN SISTEM PAKAR BERBASIS ANDROID"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAuthorName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4519210075 – BRYAN REYNALDI"
            app:layout_constraintStart_toStartOf="@+id/tvAuthorName1"
            app:layout_constraintTop_toBottomOf="@+id/tvAuthorName1" />

        <TextView
            android:id="@+id/tvAuthorName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4519210098 – BAGUS WIBISONO"
            app:layout_constraintStart_toStartOf="@+id/tvAuthorName2"
            app:layout_constraintTop_toBottomOf="@+id/tvAuthorName2" />

        <TextView
            android:id="@+id/tvAuthorName4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4519210088 – RYAN MAGHRIZA"
            app:layout_constraintStart_toStartOf="@+id/tvAuthorName3"
            app:layout_constraintTop_toBottomOf="@+id/tvAuthorName3" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kembali"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAuthorName4"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/tvAuthorName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="4519210080 – PURWA SABRANG RAMADHAN"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>